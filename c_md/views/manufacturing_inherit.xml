<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="manufacturing_inherit_form" model="ir.ui.view">
        <field name="name">manufacturing.inherit.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id" context="{'default_type': 'product'}" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('route_ids', '=', 5)]"/>
            </xpath>
        </field>
    </record>
</odoo>
